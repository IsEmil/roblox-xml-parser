{
  "compilerOptions": {
    "target": "es2021",                                
    "module": "commonjs",                               
    "allowJs": true,                             
    "outDir": "dist",                              
    "rootDir": "src/",                             
    "strict": true,                                 
    "esModuleInterop": true,                        
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true        
  },
  "exclude": [
    "example",
    "dist",
    "tests"
  ]
}
